(mkdir -p build.g++       && cd build.g++        && CXX=g++     cmake ..                                                                                                                           && make           -j $(($(nproc) - 2)) && ctest -j 2 --output-on-failure) &&
(mkdir -p build.g++.mpich && cd build.g++.mpich  && CXX=g++     cmake .. -DMPI_CXX_COMPILER=/usr/bin/mpicxx.mpich -DMPI_C_COMPILER=/usr/bin/mpicc.mpich -DMPIEXEC_EXECUTABLE=/usr/bin/mpirun.mpich && make           -j $(($(nproc) - 2)) && ctest -j 1 --output-on-failure) &&
(mkdir -p build.clang++   && cd build.clang++    && CXX=clang++ cmake .. -DCMAKE_CXX_CLANG_TIDY="clang-tidy"                                                                                       && make VERBOSE=1 -j $(($(nproc) - 2)) && ctest -j 1 --output-on-failure)
